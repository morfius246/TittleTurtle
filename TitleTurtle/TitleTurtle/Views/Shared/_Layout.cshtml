<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />  
    <link href="~/Content/style.css" rel="stylesheet" />
    <script src="js/jquery-1.4.4.min.js"></script>
    <script src="js/slides.min.jquery.js"></script>
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>



    <title>@ViewBag.Title - Title Turtle</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <header id="header">
        <div id="wrap_nav" style="margin-top: 0px">
            <div class="main_col">
                
                <div class="logo">
                    <a href="#">
                        <img src="~/.jpg" />
                    </a>
                </div>
                <nav id="nav">
                    <ul id="navul">
                        <li class="navli">@Html.ActionLink("Все статьи", "Index", "Home")</li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="navli">@Html.ActionLink("Управление", "Control", "Account")</li>
                        }
                        <li class="navli">@Html.ActionLink("Поиск", "Sort", "Home")</li>
                        <li class ="navli"><div id="head1"></div></li>
                        <li class="navli">@Html.ActionLink("Обратная связь", "Feedback", "Home")</li>
                        @Html.Partial("_LoginPartial")
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    
    <div class="mainBox">
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
