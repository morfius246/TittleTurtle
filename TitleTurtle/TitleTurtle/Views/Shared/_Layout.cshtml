<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Multi-blog Tittle-Turtle - it is about everything">
    <meta name="author" content="Bionic University team. Tittle Turtle">
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.9.1.js" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#totop").hide();
            $(function () {
                $(window).scroll(function () {
                    if ($(this).scrollTop() > 200) {
                        $('#totop').fadeIn();
                    } else {
                        $('#totop').fadeOut();
                    }
                });
                // scroll body to 0px on click
                $('#totop a').click(function () {
                    $('html, body').animate({
                        scrollTop: 0
                    }, 800);
                    return false;
                });
            });
        });
    </script>
    @RenderSection("scripts", required: false)
    <title>@ViewBag.Title | Tittle Turtle</title>
    <link href="/Images/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/buttons.js"></script>
    <script type="text/javascript">stLight.options({ publisher: "76c2b3b9-d3f6-45ad-8221-a6c658b3da72", doNotHash: true, doNotCopy: false, hashAddressBar: false });</script>

</head>
    <body>
            <div class="navbar navbar-inverse" role="navigation">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="/" style="outline-style: none"><img height="45" src="/Images/tittle_turtle_logo.svg" alt="" /></a>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                @using (Html.BeginForm("Sort", "Home", FormMethod.Get, new { @class = "navbar-right" }))
                                {
                                    @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control input-lg", placeholder = "Поиск...", type = "text" })
                                }
                            </li>

                            <li><a href="/" style="outline-style: none">Все статьи</a></li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li><a href="/Account/Control" style="outline-style: none">Управление</a></li>
                            }
                            <li><a href="/Home/Feedback" style="outline-style: none">Обратная связь</a></li>

                            <li><a href="/Home/ShowArticle/1084" style="outline-style: none">FAQ</a></li>
                            @Html.Partial("_LoginPartial")
                        </ul>
                    </div>
                </div>
            </div>
        <div class="container">
            @RenderBody()
        </div>
            <footer>
                <a href="#" id="totop" class="btn btn-default btn-sm" onclick="$('html, body').animate({scrollTop: 0}, 200)" style="position:fixed; bottom:25px; left:5px"><span class=" glyphicon glyphicon-arrow-up"></span></a>
                Tittle Turtle team (c) 2014
            </footer>
        
    </body>
</html>
<script>
    $(document).ready(function () {
        var url = window.location.search;
        $('a[href="' + "/" + url + '"]').parent().addClass('active');
        $('a[href="' + "/" + url + '"]').addClass('active');
    });
</script>
