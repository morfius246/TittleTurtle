@model TitleTurtle.Models.LoginModel

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
</hgroup>


<div class="container">

    <section id="loginForm">
        @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
            <fieldset>
                <legend>Log in Form</legend>
                <ol>
                    <li>
                        @Html.LabelFor(m => m.UserName)
                        @Html.TextBoxFor(m => m.UserName)
                        @Html.ValidationMessageFor(model => model.UserName, null, new { style = "color:red" })
                    </li>
                    <li>
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password)
                        @Html.ValidationMessageFor(model => model.Password, null, new { style = "color:red" })
                    </li>
                    <li>
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
                    </li>
                </ol>
                <input type="submit" value="Войти" />
            </fieldset>
            <p>
                @Html.ActionLink("Зарегистрируйтесь", "Register", "Account", new { @class = "btn btn-link" }), если у вас ещё не аккаунта.
            </p>
        }
    </section>
</div>