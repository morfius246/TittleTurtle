@model TitleTurtle.Models.LoginModel
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<hgroup class="title">
    
</hgroup>
<div class="row">
    <div class="col-md-12 col">
        <h1>Авторизация</h1>
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Логин</label>
                <div class="col-sm-3">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Login" })
                    @Html.ValidationMessageFor(model => model.UserName, null, new { style = "color:red" })
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">Пароль</label>
                <div class="col-sm-3">
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Пароль", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Password, null, new { style = "color:red" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                            @Html.CheckBoxFor(m => m.RememberMe) Запомнить меня
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Войти</button>
                </div>
            </div>
            <p>
                @Html.ActionLink("Зарегистрируйтесь", "Register", "Account"), если у вас ещё не аккаунта.
            </p>
        }
    </div>
</div>