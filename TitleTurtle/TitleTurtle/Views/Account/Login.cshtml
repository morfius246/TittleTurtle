@model TitleTurtle.Models.LoginModel

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
</hgroup>


<div class="container">
    
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new {@class = "form-horizontal", role="form"}))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.UserName, new{ @class="form-control", placeholder="Email"})
                    @Html.ValidationMessageFor(model => model.UserName, null, new { style = "color:red" })
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
                <div class="col-sm-10">
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Пароль", @class="form-control"})
                    @Html.ValidationMessageFor(model => model.Password, null, new { style = "color:red" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                            @Html.CheckBoxFor(m => m.RememberMe) Запомнить меня
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Войти</button>
                </div>
            </div>
            <p>
                @Html.ActionLink("Зарегистрируйтесь", "Register", "Account"), если у вас ещё не аккаунта.
            </p>
        }        
</div>