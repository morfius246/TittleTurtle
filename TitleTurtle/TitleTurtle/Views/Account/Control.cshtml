<div id="bod">
    <div id="manage2">
        @model IEnumerable<TitleTurtle.Models.User>

        @{
            ViewBag.Title = "Пользователи";
        }

        <h2>Пользователи</h2>

        <table>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserFirstName)
                    </td>
                    <td></td>
                    <td>
                        @{
                            String[] userRoles = Roles.GetRolesForUser(item.UserFirstName);
                        }

                        @(!userRoles.Contains("Author") ? Html.ActionLink("Сделать автором", "MakeAuthor", new {userName = item.UserFirstName}) : Html.ActionLink("Убрать из авторов", "RemoveFromAuthor", new {userName = item.UserFirstName}))
                        @(!userRoles.Contains("Admin") ? Html.ActionLink("Сделать администратором", "MakeAdmin", new {userName = item.UserFirstName}) : Html.ActionLink("Убрать из администраторов", "RemoveFromAdmins", new {userName = item.UserFirstName}))
                        @Html.ActionLink("Удалить", "DeleteUser", new { userName = item.UserFirstName })
                    </td>
                </tr>
            }

        </table>
        <div id="manage2">
        </div>
        <link href="~/Content/bootstrap.css" rel="stylesheet" />
