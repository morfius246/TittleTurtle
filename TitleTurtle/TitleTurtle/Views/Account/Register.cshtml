@section Scripts {
    <script src="~/Scripts/jquery.capslockstate.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(window).capslockstate();

            $(window).bind("capsOn", function (event) {
                if ($("#Password:focus").length > 0 || $("#ConfirmPassword:focus").length > 0) {
                    $("#capsWarning").show();
                }
            });
            $(window).bind("capsOff", function (event) {
                $("#capsWarning").hide();
            });
            $(window).bind("capsUnknown", function (event) {
                $("#capsWarning").hide();
            });
            $("#Password").bind("focusout", function (event) {
                $("#capsWarning").hide();
            });
            $("#ConfirmPassword").bind("focusout", function (event) {
                $("#capsWarning").hide();
            });
            $("#Password").bind("focusin", function (event) {
                if ($(window).capslockstate("state") === true) {
                    $("#capsWarning").show();
                }
            });
            $("#ConfirmPassword").bind("focusin", function (event) {
                if ($(window).capslockstate("state") === true) {
                    $("#capsWarning").show();
                }
            });
        });
    </script>
}

@model TitleTurtle.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}

<div class="container">
    <div class="root">
        <div id="MyArticle">
            <img id="img_article" src="/Images/regist.png" />
            <div class="Article">Registration Form</div>
        </div>
        @using (Html.BeginForm())
        {
            <div class="regist-head">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()
            </div>

            <div id="form">
                <form class="form-signin">
                    @Html.TextBoxFor(x => x.UserFirstName, new { @class = "form-control", @placeholder = "Имя" })
                    @Html.TextBoxFor(x => x.UserLastName, new { @class = "form-control", @placeholder = "Фамилия" })
                    @Html.TextBoxFor(x => x.ContactEmail, new { @class = "form-control", @placeholder = "Електронная почта" })
                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @placeholder = "Логин" })
                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @placeholder = "Пароль", @type = "password" }) 
                    @Html.TextBoxFor(x => x.ConfirmPassword, new { @class = "form-control", @placeholder = "Подтвердите пароль", @type = "password" })
                    <div id="capsWarning" style="display:none">Caps Lock включен</div>
                    <input type="submit" value="Register" class="button-regist" />
                </form>
            </div>
        }
    </div>
</div>

