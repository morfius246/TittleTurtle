@model TitleTurtle.Models.Main
@{
    ViewBag.Title = "Index";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div id="bod">
    <div id="kat">
        <div id="item">
            @if (User.IsInRole("Admin") || User.IsInRole("Author"))
            {

                <p id="btn">
                    @Html.ActionLink("Добавить новую статью", "CreateArticle", "Home", new { @class = "button-index btn" })
                </p>

            }
        </div>
    <div id="upkat" >
        <span class="headkat">Категории</span>
        <a href="@Url.Action("Index", "Home")" class="item">
            <i class="fa" style="display: inline-block">Все</i>
        </a>
        @foreach (var category in Model.CategoryList)
        {
            <a href="@Url.Action("Index", "Home", new { categoryId = category.CategoryID })" class="item">
  
                <i class="fa " style="display: inline-block">@category.CategoryName</i>
                              @*<a href="@Url.Action("RemoveCategory", "Home", new { id = category.CategoryID })" class="glyphicon glyphicon-remove" style="display:inline-block; float:right"></a>*@
                </a>
        }
            @*Just for admin*@
            @if (User.IsInRole("Admin"))
        {
            using (Html.BeginForm("CreateCategory", "Home"))
            {
                <div class="item">
                    @Html.TextBoxFor(model => model.NewCategory.CategoryName, new { @class = "message-label1" })
                    <input type="submit" value="Новая категория" class="button-index btn">
                </div>
            }
        }
        

        </div>
    </div>
    <div id="stat">

        
            <legend class="legend" >Статьи</legend>
        
        
            @foreach (var item in Model.ArticleList)
{
        <div class="item">
            @item.ArticleTitle
            @if ((User.IsInRole("Author") && User.Identity.Name == item.User.UserFirstName) || User.IsInRole("Admin"))
            {
                <a id="del" href="@Url.Action("DeleteArticle", "Home", new { id = item.ArticleID })" class="glyphicon glyphicon-remove" style="display:inline-block; float:right"></a>
                <a href="@Url.Action("EditArticle", "Home", new { id = item.ArticleID })" class="glyphicon glyphicon-pencil" style="display:inline-block; float:right;margin-right:20px"></a>
            }
                <a href="@Url.Action("ShowArticle", "Home", new { id = item.ArticleID })" class="glyphicon glyphicon-play" style="display:inline-block; float: right; margin-right:20px"></a>
        </div>
}
    </div>

</div>
<link href="~/Content/bootstrap.css" rel="stylesheet" />