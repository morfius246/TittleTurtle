<div class="container">
    <div class="root">

    @model TitleTurtle.Models.FeedbackModel

    @{
        ViewBag.Title = "Feedback";
    }

    @using (Ajax.BeginForm(
"feedback",
"home",
new AjaxOptions
{
    HttpMethod = "post",
    UpdateTargetId = "target",
    LoadingElementId = "sendingProgress",
    InsertionMode = InsertionMode.Replace
}))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

            
                <div id="MyArticle">
                    <img id="img_article" src="/Images/regist.png" />
                    <div class="Article">Обратная связь</div>
                </div>
                

            @Html.LabelFor(model => model.Email)
            <div class="editor-field">
                @Html.EditorFor(model => model.Email)
                <div id="errmas">
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
                <div class="editor-field">
                    <input data-val="true" class="form-control" placeholder="User name" data-val-length="Поле Имя пользователя должно иметь строковое значение, максимальная длина которого — 50." data-val-length-max="50" data-val-required="Требуется поле Имя пользователя." id="UserName" name="UserName" type="text" value="">

            @Html.LabelFor(model => model.MessageTopic)
            <div class="editor-field">
                @Html.EditorFor(model => model.MessageTopic)
                <div id="errmas">
                    @Html.ValidationMessageFor(model => model.MessageTopic)
                </div>
            </div>

            @Html.LabelFor(model => model.MessageText)
            <div class="editor-field">
                @Html.EditorFor(model => model.MessageText)
                <div id="errmas">
                    @Html.ValidationMessageFor(model => model.MessageText)
                </div>
                <div class="editor-field">
                    <input class="form-control" placeholder="Email address" data-val="true" data-val-required="Требуется поле Адрес электронной почты." id="Email" name="Email" type="email" value="">
                    <div id="errmas">
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.MessageText)
                </div>
                <div class="editor-field">
                    <textarea class="form-control"  placeholder="Message" data-val="true" data-val-length="Поле Сообщение должно иметь строковое значение, максимальная длина которого — 250." data-val-length-max="250" data-val-required="Требуется поле Сообщение." id="MessageText" name="MessageText"></textarea>
                    <div id="errmas">
                        @Html.ValidationMessageFor(model => model.MessageText)
                    </div>
                </div>
                <div id="input_back">
                    <p>
                        <input type="submit" value="Отправить" />
                        <span id="sendingProgress" style="display: none;">
                            ждите, идет отправка сообщения...

                            <img src='@Href("~/Content/Images/ajax_loader_big.gif")' alt="Ждите" />
                        </span>
                    </p>
                    <p id="target">
                </div>
           
        }

                        <img src='@Href("~/Content/Images/ajax_loader_big.gif")' alt="Ждите" />
                    </span>
                </p>
                <p id="target">
            </div>
        </fieldset>
    }
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>
