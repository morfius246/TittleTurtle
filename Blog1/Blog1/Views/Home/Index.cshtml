@model IEnumerable<Blog1.Models.Article>

@{
    ViewBag.Title = "Главная";
}

<h2>Главная</h2>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<p>
    @Html.ActionLink("Create New", "Create", "Home")
</p>
@foreach (var item in Model)
        {
            <div class="list-group-item">
                @item.ArticleTitle
                <a href="@Url.Action("Delete", "Home", new {id = item.ArticleID})" class="glyphicon glyphicon-remove" style="display:inline-block; float:right"></a>
                <a href="@Url.Action("Edit", "Home", new {id = item.ArticleID})" class="glyphicon glyphicon-pencil" style="display:inline-block; float:right;margin-right:20px"></a>
                <a href="@Url.Action("Show", "Home", new {id = item.ArticleID})" class="glyphicon glyphicon-play" style="display:inline-block; float: right; margin-right:20px"></a>  
            </div>
        }
